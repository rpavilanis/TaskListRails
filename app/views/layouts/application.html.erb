<!DOCTYPE html>
<html>
<head>
  <title>TaskListRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>

    <nav>
      <div class="navigation-container">
        <%= link_to image_tag("/Logo.png", alt:"image of user", id: "logo"), root_path%>
        <ul>
          <% if current_user %>
          <li>Logged in as <%= current_user.email %></li>
          <li><%= link_to "Log Out", session_path("current"), method: "delete" %></li>
          <% else %>
          <li><%= link_to("Login", "/auth/github") %></li>
          <% end %>
        </ul>
      </div>
    </nav>

  </header>


<%= yield %>

</body>
</html>
