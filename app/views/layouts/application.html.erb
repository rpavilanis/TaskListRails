<!DOCTYPE html>
<html>
<head>
  <title>TaskListRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>

    <nav>
      <img id="logo" src="/Logo.png" alt="Logo">
      <div class="navigation-container">
        <ul>
          <% if current_user %>
          <li>Logged in as <%= current_user.email %></li>
          <li><%= link_to "Log Out", session_path("current"), method: "delete" %></li>
          <li><%= link_to("Add New Task", new_path((params[:user_id].to_i))) %></li>
          <% else %>
          <li><%= link_to("Login", "/auth/github") %></li>
          <% end %>
        </ul>
      </div>
    </nav>

  </header>


<%= yield %>

</body>
</html>
