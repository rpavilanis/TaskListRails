<section>
  <h1>  Task Name: <%= @task[:title]%></h1>
  <h3> Description: <%= @task[:description] %> </h3>
  <h4> Completed?
  <% if @task[:completion_status] == true %>
    <%= "Yes" %>
  <% else %>
    <%= "Not yet completed" %>
  <% end %>

  <h4> Completed Time and Date: <%= @task[:completed_at] %></h4>
  <%= link_to( "Edit", edit_path(@task[:id]) ) %>

  <%= link_to( "Delete", delete_path(@task[:id]), method: :delete, data: { confirm: 'Are you sure?' } ) %>
  <!-- link that someone can click on - says edit_path instead of show_path because the page is called edit -->
</section>
